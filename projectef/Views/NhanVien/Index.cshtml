
@model IEnumerable<NhanVien>
@{
    ViewData["Title"] = "Index";
}

<h1>Nhân viên</h1>
<div style="display:inline-flex">
    <a asp-controller="NhanVien" asp-action="Create" class="btn btn-primary">
        Thêm nhân viên
    </a>
    <form class="form-inline" style="display:inline-flex; margin-left:800px">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
  </form>
</div>
<br />
<br />
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <th>
            ID
        </th>
        <th>
            Name
        </th>
        <th>
            Address
        </th>
        <th>
            Phone
        </th>
        <th>
            Action
        </th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Address
                </td>
                <td>
                    @item.Phone
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="NhanVien" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary" style="margin-right: 10px; border-radius:5px" >Sửa</a>
                        <a asp-controller="NhanVien" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" style="border-radius:5px">Xóa</a>
                    </div>
                </td>
            </tr>   
        }
    </tbody>

</table>

